# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_RUN_PORT=5025

# Database Configuration
DATABASE_URL=postgresql://bank_user:bank_password@db:5432/bank_api_dev
TEST_DATABASE_URL=postgresql://bank_user:bank_password@db:5432/bank_api_test

# Security Configuration
# ⚠️  CHANGE THESE IN PRODUCTION!
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# JWT Token Expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Bank Business Rules
BANK_INITIAL_CAPITAL=250000.00
RESERVE_RATIO=0.25
RESERVE_REQUIREMENT=0.75
MAX_WITHDRAWAL_AMOUNT=10000.00
DAILY_WITHDRAWAL_LIMIT=50000.00

# API Configuration
API_TITLE=Scrooge Bank API
API_VERSION=v1
API_DESCRIPTION=RESTful Banking API

# CORS (comma-separated list of origins)
CORS_ORIGINS=*

# Feature Flags
ENABLE_WITHDRAWALS=true
ENABLE_LOANS=true
ENABLE_RATE_LIMITING=false
